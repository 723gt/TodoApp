<body>
  <h1 class="titles"> <%= @name %>'s  Todo Task </h1>
  <span class="newtask">
    <%= link_to 'new task' ,'/todo/new' %>
  </span>
  <span class="todone">
    <%= link_to 'ToDone','/done' %>
  </span>
    
  <% @todo.each do |d| %>
    <div class="tasks">
      <span class="todocon">
        Content:<%= d.content %>
      </span>
      <span class="todomemo">
        Memo:<%= d.memo %>
      </span>
      <span class="taskcheng">
        <%= link_to 'Doneへ' ,todo_cheng_url(d) %>
      </span>
    </div>
  <% end %>
</body>
